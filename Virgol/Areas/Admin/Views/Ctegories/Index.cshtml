@model IEnumerable<Virgol.Views.ViewModel.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<table class="table me-4">
    <tr class="table-dark">
        <th >
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="~/Images/Category/@item.ImageName" class="photo200-120" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CtegoryId }, new {@class= "btn btn-warning" }) |
                @Html.ActionLink("Details", "Details", new { id = item.CtegoryId }, new { @class = "btn btn-secondary" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CtegoryId }, new { @class = "btn btn-danger" })
            </td>

        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success me-4" })
</p>
<script src="~/Scripts/Site.js"></script>